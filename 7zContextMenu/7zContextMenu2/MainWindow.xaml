<Window x:Class="_7zContextMenu2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_7zContextMenu2"
        mc:Ignorable="d"
        Title="7-Zip Context Menu For Windows 11" Height="280" Width="480" Padding="0">
    <Border  CornerRadius="4" Padding="0">
        <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="40"></RowDefinition>
                <RowDefinition Height="40"></RowDefinition>
                <RowDefinition Height="40"></RowDefinition>
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center">add 7z program folder to system PATH environment</TextBlock>
          
            <Button Grid.Row="1" Click="Open_Click" Padding="8" HorizontalAlignment="Center" VerticalAlignment="Center" >Open Setting</Button>
            <TextBlock Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Bottom" Text="ikas@2021"></TextBlock>
        </Grid>
    </Border>
</Window>
