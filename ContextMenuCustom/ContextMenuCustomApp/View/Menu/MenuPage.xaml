<Page x:Class="ContextMenuCustomApp.View.Menu.MenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
      mc:Ignorable="d"
      d:Width="600"
      d:Height="400"
      d:Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
      muxc:BackdropMaterial.ApplyToRootOrPageBackground="True"
      DataContext="{x:Bind _viewModel}" >
    <Grid HorizontalAlignment="Stretch"
          VerticalAlignment="Stretch" >
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="*" />
            <RowDefinition Height="32" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" />
            <ColumnDefinition Width="4" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Border Margin="0,4"
                Grid.Column="1"
                Opacity="0.2"
                Width="1"
                Background="Gray"
                Grid.RowSpan="3" />
        <ListView Margin="4"
                  x:Name="CommandList"
                  SelectionMode="Single"
                  Grid.Column="0"
                  Grid.Row="1"
                  ItemsSource="{Binding MenuItems}" >
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Title}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <ScrollViewer Margin="4"
                      Grid.Column="2"
                      Grid.Row="1"
                      DataContext="{Binding SelectedItem, ElementName=CommandList}" >
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="64" />
                </Grid.ColumnDefinitions>
                <TextBox Grid.Row="0"
                         Grid.Column="0"
                         Grid.ColumnSpan="2"
                         Header="Title"
                         PlaceholderText="open with notepad"
                         Text="{Binding Title,Mode=TwoWay}" />
                <TextBox Grid.Row="1"
                         Grid.Column="0"
                         Header="Exe"
                         PlaceholderText='"C:\Windows\notepad.exe"'
                         Margin="0,8,0,0"
                         Text="{Binding Exe,Mode=TwoWay}" />
                <Button Grid.Row="1"
                        Grid.Column="1"
                        Margin="4,0,0,-1"
                        VerticalAlignment="Bottom"
                        HorizontalAlignment="Stretch"
                        ToolTipService.ToolTip="Open"
                        x:Name="OpenExeButton"
                        Click="OpenExeButton_OnClick" >
                    <SymbolIcon Symbol="OpenFile" />
                    <!--TODO Margin-->
                </Button>
                <TextBox Grid.Row="2"
                         Grid.Column="0"
                         Grid.ColumnSpan="2"
                         Header="Param"
                         PlaceholderText='"{path}"'
                         Margin="0,8,0,0"
                         Text="{Binding Param,Mode=TwoWay}" />
                <TextBox Grid.Row="3"
                         Grid.Column="0"
                         Grid.ColumnSpan="2"
                         Header="Icon"
                         PlaceholderText='"c:\some\icon.icon"'
                         Margin="0,8,0,0"
                         Text="{Binding Icon,Mode=TwoWay}" />
                <TextBox Grid.Row="4"
                         Grid.Column="0"
                         Grid.ColumnSpan="2"
                         Header="Match Extensions"
                         PlaceholderText='".txt .zip" or *'
                         Margin="0,8,0,0"
                         Text="{Binding AcceptExts,Mode=TwoWay}" />
                <ToggleSwitch Grid.Row="5"
                              Grid.Column="0"
                              Grid.ColumnSpan="2"
                              Header="Match Folder"
                              Margin="0,8,0,0"
                              IsOn="{Binding AcceptDirectory,Mode=TwoWay}" />
            </Grid>
        </ScrollViewer>
        <StackPanel HorizontalAlignment="Right"
                    Grid.Row="0"
                    Grid.Column="0"
                    Orientation="Horizontal" >

            <Button Margin="4,0"
                    Padding="4"
                    Click="Add_Click"
                    ToolTipService.ToolTip="Add a menu"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center" >
                <SymbolIcon Symbol="Add" />
            </Button>
            <Button Margin="4,0"
                    Click="Refresh_Click"
                    ToolTipService.ToolTip="Refresh menus"
                    Padding="4"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center" >
                <SymbolIcon Symbol="Refresh" />
            </Button>
            <Button Margin="4,0"
                    Click="Open_Folder_Click"
                    ToolTipService.ToolTip="Open menus folder"
                    Padding="4"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center" >
                <SymbolIcon Symbol="Folder" />
            </Button>
        </StackPanel>
        <StackPanel HorizontalAlignment="Right"
                    Grid.Row="0"
                    Grid.Column="2"
                    Orientation="Horizontal" >


            <Button Margin="4,0"
                    Click="Save_Click"
                    ToolTipService.ToolTip="Save menu"
                    Padding="4"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center" >
                <SymbolIcon Symbol="Save" />
            </Button>

            <Button Margin="4,0"
                    Click="Delete_Click"
                    ToolTipService.ToolTip="Delete menu"
                    Padding="4"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center" >
                <SymbolIcon Symbol="Delete" />
            </Button>

            <Button Margin="4,0"
                    Click="Open_Click"
                    ToolTipService.ToolTip="Open menu file"
                    Padding="4"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center" >
                <SymbolIcon Symbol="OpenFile" />
            </Button>
        </StackPanel>
        <StackPanel Grid.Row="2"
                    Grid.Column="0"
                    HorizontalAlignment="Right"
                    Orientation="Horizontal" >
            <muxc:TeachingTip x:Name="CacheTip"
                              Title="About Cache:"
                              Target="{x:Bind BuildCacheButton}"
                              PreferredPlacement="Auto"
                              PlacementMargin="4"
                              IsLightDismissEnabled="True"
                              CloseButtonContent="Got it!" >
                <muxc:TeachingTip.Content>
                    <TextBlock>
                        <Run />
                        <Run>Preprocess the menu files to cache</Run>
                        <LineBreak />
                        <Run>This can optimize the menu display speed</Run>
                        <LineBreak />
                        <Run Foreground="Red" >Rebuild manually when you modify the menu!</Run>
                        <LineBreak />
                        <LineBreak />
                        <Run>Cache Time:</Run>
                        <LineBreak />
                        <Run Text="{Binding CacheTime}" />
                    </TextBlock>
                </muxc:TeachingTip.Content>

            </muxc:TeachingTip>
            <Button Margin="4,0"
                    Padding="4"
                    VerticalAlignment="Center"
                    Background="{x:Null}"
                    Click="BuildCacheTipButton_Click"
                    x:Name="BuildCacheTipButton"
                    BorderThickness="0" >
                <SymbolIcon Symbol="Help" />
            </Button>
            <Button Margin="4,0"
                    Click="{x:Bind _viewModel.Build}"
                    ToolTipService.ToolTip="Preprocess menus to cache"
                    Padding="4"
                    x:Name="BuildCacheButton"
                    VerticalAlignment="Center" >
                <SymbolIcon Symbol="Sync" />
            </Button>
            <Button Margin="4,0"
                    Click="{x:Bind _viewModel.ClearCache}"
                    ToolTipService.ToolTip="Clear menus cache"
                    Padding="4"
                    VerticalAlignment="Center" >
                <SymbolIcon Symbol="Clear" />
            </Button>
        </StackPanel>
        <StackPanel Grid.Column="1"
                    Grid.Row="2"
                    Grid.ColumnSpan="2"
                    Orientation="Horizontal"
                    Margin="04,0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom" >

            <HyperlinkButton Margin="4,0"
                             Padding="4"
                             NavigateUri="https://github.com/ikas-mc/ContextMenuForWindows11/issues/2" >
                <TextBlock>
                    <Run>Help</Run>
                </TextBlock>
            </HyperlinkButton>

            <HyperlinkButton Margin="4,0"
                             Padding="4"
                             NavigateUri="https://github.com/ikas-mc/ContextMenuForWindows11" >
                <TextBlock>
                    <Run Text="{x:Bind _viewModel.Version()}" />
                    <Run>ikas</Run>
                </TextBlock>
            </HyperlinkButton>
            <Button Padding="4" >
                <Button.Flyout>
                    <Flyout>
                        <StackPanel MinWidth="320"
                                    MinHeight="120" >
                            <TextBox Header="Custom Menu Title"
                                     Text="{x:Bind _viewModel.GetCustomMenuName(),BindBack=_viewModel.SetCustomMenuName,Mode=TwoWay}" />
                        </StackPanel>
                    </Flyout>
                </Button.Flyout>
                <SymbolIcon Symbol="Setting" />
            </Button>
        </StackPanel>
    </Grid>

</Page>